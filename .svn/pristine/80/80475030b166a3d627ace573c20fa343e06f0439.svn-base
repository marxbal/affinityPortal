/* Made with love by Mutiullah Samim*/

html,body{
background-size: cover;
background-repeat: no-repeat;
height: 100%;
font-family: 'Numans', sans-serif;
background: linear-gradient(to bottom, rgba(0,194,146,1), rgba(0,106,128,1));
}

.login-card{
	border-radius: 2px;
}

.container{
height: 100%;
align-content: center;
}

.card{
margin-top: 10px;
width: 375px;
background-color: white !important;
}

.social_icon span{
font-size: 60px;
margin-left: 10px;
color: #00c292;
}

.social_icon span:hover{
color: white;
cursor: pointer;
}

.card-header h3{
color: white;
}

.social_icon{
position: absolute;
right: 20px;
top: -45px;
}

.input-group-prepend span{
width: 50px;
background-color: lightgray;
color: black;
border:0 !important;
}

input:focus{
outline: 0 0 0 0  !important;
box-shadow: 0 0 0 0 !important;

}

.remember{
color: rgb(33,33,33);
}

.remember input
{
width: 20px;
height: 20px;
margin-left: 15px;
margin-right: 5px;
}

.login_btn{
color: white;
background-color: #00c292;
width: 100px;
}

.login_btn:hover{
color: gray;
background-color: #00c292;
}

.login-card-body{
	flex: 0;
	border-radius: 2px;
}

.links{
color: gray;
font-size: 12px;
}

.links a{
margin-left: 4px;
}

.client-logo{
    width: 60%;
}
.digitalInno-brand{
    font-size: 12px;
    color: gray;
}
